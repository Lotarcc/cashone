# Swagger configuration file

# General options
output: docs
parseInternal: true
parseDependency: true
parseDepth: 1
instanceName: swagger

# Documentation options
generalInfo:
  title: CashOne API
  description: API Server for CashOne expense tracking application
  version: 1.0.0
  contact:
    name: API Support
    url: https://github.com/Lotarcc/cashone
    email: semyon.kolesnikov@outlook.com
  license:
    name: MIT
    url: https://opensource.org/licenses/MIT

# Formatting options
propertyStrategy: camelcase
outputTypes: [go,json,yaml]
parseVendor: false
markdownFiles:
  - ../README.md

# Code generation options
generatedTime: true
parseGoList: true
codeExampleFiles: []
excludes: []

# API Server options
schemes: [http, https]
host: localhost:8080
basePath: /api/v1

# Security options
securityDefinitions:
  BearerAuth:
    type: apiKey
    name: Authorization
    in: header

# Response formatting
responseFormatters:
  200: Success
  201: Created
  204: No Content
  400: Bad Request
  401: Unauthorized
  403: Forbidden
  404: Not Found
  500: Internal Server Error
